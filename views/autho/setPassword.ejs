<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <form action="/setPassword" method="post">
    <p class="text-black"><%= message%></p>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" name="email"class="form-control" id="username" aria-describedby="emailHelp"
            placeholder="Enter email"  required readonly value="<%= email %>">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password"  name="userNewPassword"class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Repeat Password</label>
        <input type="password" name="userConiformNewPassword"class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>
